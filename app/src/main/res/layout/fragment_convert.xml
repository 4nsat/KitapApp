<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".ui.convert.СonvertFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/firstPlain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/custom_border"
                android:gravity="top"
                android:hint="Енгізуді бастаңыз..."
                android:inputType="textMultiLine|text"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ә"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button1"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="і"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ң"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ғ"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button4"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ү"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button5"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ұ"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button6"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="қ"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button7"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ө"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button8"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="һ"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/button9"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="↑"
                    android:textSize="18sp"
                    app:strokeColor="#FACACACA"
                    app:strokeWidth="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/changeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/firstLang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Кириллица"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_swap_horiz_24"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/secondLang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Latynşa"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/secondPlain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border"
                android:gravity="top"
                android:hint="Аударма"
                android:inputType="textMultiLine|text"
                android:padding="16dp"
                android:selectAllOnFocus="true" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>