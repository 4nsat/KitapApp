<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/custom_border"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="108dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/sImgBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/openbook" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sNameBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name book"
            android:textColor="#222831"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sAuthorBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author book"
            android:textColor="#393E46"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sGenreBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre book"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/sRatingBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.7"
                android:textColor="#393E46"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>